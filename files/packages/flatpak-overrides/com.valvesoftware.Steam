[Context]
shared=network
sockets=pulseaudio
devices=all
filesystems=!xdg-music;!xdg-pictures;~/Games/SteamLibrary:create;xdg-documents/Gaming;xdg-pictures/Gaming/Steam;xdg-videos/Gaming/sandbox:create

[Environment]
